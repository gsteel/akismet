{
    "name": "gsteel/akismet",
    "description": "Simple Akismet API Bindings",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "akismet",
        "spam",
        "psr-17",
        "psr-18",
        "api-client"
    ],
    "authors": [
        {
            "name": "George Steel",
            "email": "george@net-glue.co.uk"
        }
    ],
    "require": {
        "php": "~8.1 || ~8.2",
        "ext-json": "*",
        "myclabs/php-enum": "^1.8.3",
        "php-http/discovery": "^1.14.1",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-client": "^1.0.1",
        "psr/http-client-implementation": "*",
        "psr/http-factory": "^1.0.1",
        "psr/http-factory-implementation": "*",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "doctrine/coding-standard": "^11.1.0",
        "laminas/laminas-diactoros": "^2.24.0",
        "php-http/client-common": "^2.6",
        "php-http/curl-client": "^2.2.1",
        "php-http/mock-client": "^1.5",
        "phpunit/phpunit": "^10.0.11",
        "symfony/options-resolver": "^5.4.19",
        "vimeo/psalm": "^5.7.5",
        "psalm/plugin-phpunit": "^0.18.4"
    },
    "autoload": {
        "psr-4": {
            "GSteel\\Akismet\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GSteel\\Akismet\\Test\\": "test/Unit",
            "GSteel\\Akismet\\IntegrationTest\\": "test/Integration"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "php-http/discovery": false
        },
        "platform": {
            "php": "8.1.99"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@sa",
            "@test"
        ],
        "cs": "phpcs",
        "sa": "psalm",
        "test": "phpunit",
        "static-analysis": "psalm --stats --shepherd"
    }
}
